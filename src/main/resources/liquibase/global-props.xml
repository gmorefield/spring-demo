<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!-- global properties to map datatypes -->
    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>
    <property name="now" value="getdate()" dbms="mssql"/>

    <property name="datalength" value="length" dbms="h2"/>
    <property name="datalength" value="DATALENGTH" dbms="mssql"/>

    <property name="autoincrement" value="auto_increment" dbms="mysql,h2"/>
    <property name="autoincrement" value="IDENTITY(1,1)" dbms="mssql"/>

    <property name="timestamp" value="timestamp" dbms="h2"/>
    <property name="timestamp" value="timestamp" dbms="mssql"/>
    <property name="datetime23" value="timestamp" dbms="h2"/>
    <property name="datetime23" value="datetime2(3)" dbms="mssql"/>

    <!-- global properties to address schema -->
    <property name="schema-name" value="${liquibase.liquibaseSchemaName}"/>

    <property name="schema-prefix" value="" dbms="h2"/>
    <property name="schema-prefix" value="${schema-name}." dbms="!h2"/>


</databaseChangeLog>